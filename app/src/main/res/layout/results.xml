<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    
<TextView
    android:id="@+id/angle0"
    android:textSize="16sp"
    android:text="0"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

<TextView
    android:id="@+id/angle1"
    android:textSize="16sp"
    android:text="0"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

<TextView
    android:id="@+id/estDistance"
    android:textSize="16sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

<LinearLayout 
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
<TextView
    android:textSize="16sp"
    android:text="Distance to target base (optional): "
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
<EditText
    android:id="@+id/distance"
    android:imeOptions="flagNoExtractUi"
    android:lines="1"
	android:layout_width="100sp"
	android:inputType="numberDecimal"
	android:focusableInTouchMode="true"
	android:focusable="true"
	android:layout_height="wrap_content" />
</LinearLayout>
    
<LinearLayout 
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
<TextView
    android:textSize="16sp"
    android:text="Camera height: "
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
<EditText
    android:id="@+id/deviceHeight"
    android:imeOptions="flagNoExtractUi"
    android:lines="1"
	android:inputType="numberDecimal"
	android:layout_width="100sp"
	android:focusableInTouchMode="true"
	android:focusable="true"
	android:layout_height="wrap_content" />
</LinearLayout>


<TextView
    android:id="@+id/height"
    android:textSize="30sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

<TextView
    android:id="@+id/message"
    android:textSize="14sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#FF0000"
    android:text=""
    />

<TextView
    android:textSize="14sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:text="Note: Use the same units (meters, feet, inches, chains, etc.) for all measurements, and the target height will be in the same unit. In typical use, camera height is close to your own height. If you can measure the distance to the target base, you will get better precision."
    />

</LinearLayout>
